{
    "name": "mercury",
    "version": "1.0.0",
    "description": "远程控制助手",
    "main": "app/main/index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "start:renderer": "cd app/renderer/src/main && npm start",
        "start:server": "cd ./updater-server && node index.js",
        "start:app": "electron .",
        "start": "concurrently \"npm run start:renderer\" \"wait-on http://localhost:3000 && npm run start:app \"",
        "build": "cd app/renderer/src/main && npm run build",
        "pac:mac": "npm run build && electron-builder --mac",
        "pac-win": "npm run build && electron-builder --win --ia32",
        "postinstall": "electron-builder install-app-deps"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/a958330481/mercury.git"
    },
    "author": "kevinInsight",
    "license": "ISC",
    "keywords": [
        "electron",
        "react",
        "webrtc",
        "node",
        "screen",
        "recorder"
    ],
    "bugs": {
        "url": "https://github.com/a958330481/mercury/issues"
    },
    "homepage": "https://github.com/a958330481/mercury#readme",
    "dependencies": {
        "@electron/remote": "^2.0.8",
        "electron-about-window": "^1.15.2",
        "electron-is-dev": "^2.0.0",
        "robotjs": "^0.6.0",
        "vkey": "^1.0.1"
    },
    "devDependencies": {
        "concurrently": "^7.5.0",
        "cross-env": "^7.0.3",
        "electron": "^17.0.0",
        "electron-builder": "^23.6.0",
        "electron-builder-squirrel-windows": "^24.0.0-alpha.3",
        "electron-rebuild": "^3.2.9",
        "node-sass": "^7.0.3",
        "wait-on": "^6.0.1",
        "eslint": "^7.18.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-prettier": "^3.3.1",
        "lint-staged": "^10.5.3",
        "prettier": "^2.2.1",
        "stylelint": "^13.8.0",
        "stylelint-config-rational-order": "^0.1.2",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-order": "^4.1.0",
        "stylelint-prettier": "^1.1.2"
    },
    "build": {
        "appId": "com.mercury",
        "productName": "mercury",
        "files": "app",
        "asar": true,
        "extraFiles": [
            "app/renderer/**/src"
        ],
        "directories": {
            "buildResources": "resource",
            "output": "release"
        },
        "copyright": "Copyright © 2022 kevinInsight",
        "mac": {
            "target": [
                "dmg",
                "zip"
            ],
            "icon": "resources/icon.icns"
        },
        "dmg": {
            "background": "resources/background.png",
            "window": {
                "width": 540,
                "height": 380
            },
            "contents": [{
                    "x": 410,
                    "y": 180,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 180,
                    "type": "file"
                }
            ],
            "iconSize": 128
        },
        "win": {
            "icon": "resources/icon.ico",
            "target": [
                "squirrel",
                "nsis"
            ]
        },
        "nsis": {
            "oneClick": false,
            "language": "2052",
            "perMachine": true,
            "allowToChangeInstallationDirectory": true
        },
        "squirrelWindows": {
            "iconUrl": "https://raw.githubusercontent.com/a958330481/mercury/master/images/icon.ico"
        }
    },
    "lint-staged": {
        "*.{js}": [
            "eslint --fix",
            "prettier --write",
            "git add"
        ],
        "*.{json,md}": [
            "prettier --write",
            "git add"
        ]
    }
}